<div class = "comment_content">
  <p><%= comment.name %></p>
  <p><%= comment.body %></p>
  <p><%= time_ago_in_words(comment.created_at) %> Ago</p>
</div>
<% if user_signed_in? %>
  <div class="delete_comm">
    <p><%= link_to 'Delete', [comment.post, comment],
                    method: :delete,
                    class: "button",
                    data: {confirm: 'Are you sure?'} %>
    </p>
  </div>
<% end %>
