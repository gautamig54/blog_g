<h1>new post</h1>

<%= form_for :post, url: posts_path do |f| %>
  <% if @post.errors.any? %>
    <div id= "errors">
      <h3><%= pluralize(@post.errors.count, "error")%> prevent this post from saving</h3>
      <ul>
        <% @post.errors.full_messages.each do |msg|%>
        <li><%= msg%></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title%>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body%>
  </p>

  <p>
    <%= f.submit%>
  </p>
<% end %>
